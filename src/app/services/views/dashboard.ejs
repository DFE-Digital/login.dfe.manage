<div id="home-top" class="home-top">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl govuk-!-margin-top-5 govuk-!-margin-bottom-5">DfE Manage</h1>
                <h3 class="govuk-heading-m">
                    Here you can manage and configure your service, as well as change roles and policies, and determine who has access to your service.
                </h3>
            </div>
        </div>
    </div>
</div>
<div class="govuk-width-container govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 id="service-name" class="govuk-heading-xl govuk-!-margin-top-0">
                <%=locals.serviceDetails.name%>
            </h1>
        </div>
        <!-- side menu with related actions -->
        <div class="govuk-grid-column-one-quarter">
            <aside id="related-actions" class="govuk-!-margin-top-0">
                <h2 class="govuk-heading-m">Related actions</h2>
                <ul class="govuk-list">
                    <li>
                        <a id="change-service" class="govuk-link-bold" href="/">Change service</a>
                    </li>
                </ul>
            </aside>
        </div>
    </div>
    <% if (locals.userRoles.includes('serviceSup')) { %>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-m govuk-!-margin-bottom-0">Support your service's users</h1>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible govuk-!-margin-top-1" />
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="manage-cards">
                <div class="manage-card">
                    <h3 class="govuk-heading-s">
                        <a id="user-management" class="govuk-link-bold" href="<%=locals.serviceId %>/users"
                            >User management</a
                        >
                    </h3>
                    <p class="govuk-body">Manage those who use your service and invite new users.</p>
                </div>

                <div class="manage-card">
                    <h3 class="govuk-heading-s">
                        <a id="organisation-search" class="govuk-link-bold" href="<%=locals.serviceId %>/organisations"
                            >Organisation search</a
                        >
                    </h3>
                    <p class="govuk-body">Search for an organisation.</p>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-m govuk-!-margin-bottom-0">View and configure your service</h1>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible govuk-!-margin-top-1" />
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="manage-cards">
                <% const { userRoles } = locals %>
                <% if (userRoles.includes('secretsManage') || 
                       userRoles.includes('serviceSup') || 
                       userRoles.includes('serviceconfig')) { %>
                <div class="manage-card">
                    <h3 class="govuk-heading-s">
                        <a
                            id="service-configuration"
                            class="govuk-link-bold"
                            href="<%=locals.serviceId%>/service-information"
                            >View service information</a
                        >
                    </h3>
                    <p class="govuk-body">View the name and description of your service.</p>
                </div>
                <% } %> 
                
                <% if (userRoles.includes('serviceconfig')) { %>
                <div class="manage-card">
                    <h3 class="govuk-heading-s">
                        <a class="govuk-link-bold" href="<%=locals.serviceId%>/service-configuration"
                            >Service configuration</a
                        >
                    </h3>
                    <p class="govuk-body">View and change your service configuration information.</p>
                </div>
                <% } %>

                <% if (locals.userRoles.includes('secretsManage')) { %>
                    <div class="manage-card">
                        <h3 class="govuk-heading-s">
                            <a class="govuk-link-bold" href="<%=locals.serviceId%>/service-secrets"
                                >Manage service secrets</a
                            >
                        </h3>
                        <p class="govuk-body">Manage the client and API secrets for service configuration.</p>
                    </div>
                <% } %>

                <% if (userRoles.includes('serviceSup') ||
                       userRoles.includes('serviceconfig') ) { %>
                <div class="manage-card">
                    <h3 class="govuk-heading-s">
                        <a id="manage-policies" class="govuk-link-bold" href="<%= locals.serviceId %>/policies"
                            >Manage policies</a
                        >
                    </h3>
                    <p class="govuk-body">
                        Change your service policies to determine who can and cannot access your service.
                    </p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
