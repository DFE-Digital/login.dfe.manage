<div class="govuk-width-container govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l text-break">
                Review new policy condition for <%= locals.policy.name %>
            </h1>
            <p class="govuk-body">Review these details before confirming.</p>

            <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Condition   
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <p class="govuk-body"><%=locals.condition%></p>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Operation
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <p class="govuk-body"><%= locals.operator%></p>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                      Value
                    </dt>
                    <dd class="govuk-summary-list__value">
                      <p class="govuk-body"><%=locals.value%></p>
                    </dd>
                  </div>
            </dl>

            <form method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button" data-module="govuk-button">Save condition</button>
                    <a href="<%= locals.cancelLink %>" class="govuk-button govuk-button--secondary">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>
