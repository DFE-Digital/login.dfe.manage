<div class="row">
    <div class="col-8">
        <h1 class="heading-xlarge">Create banner</h1>
    </div>
</div>

<div class="grid-row">
    <div class="col-12">
        <form method="post" id="form-new-banner">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <div class="form-group <%= (locals.validationMessages.name !== undefined) ? 'form-group-error' : '' %>">
                <label class="form-label" for="bannerName">Banner name</label>
                <% if (locals.validationMessages.name !== undefined) { %>
                    <p class="error-message" id="validation-name"><%= locals.validationMessages.name %></p>
                <% } %>
                <input class="form-control" id="bannerName" name="bannerName" maxlength="20">
            </div>
            <div class="form-group <%= (locals.validationMessages.title !== undefined) ? 'form-group-error' : '' %>">
                <label class="form-label" for="bannerTitle">Banner title</label>
                <% if (locals.validationMessages.title !== undefined) { %>
                    <p class="error-message" id="validation-title"><%= locals.validationMessages.title %></p>
                <% } %>
                <input class="form-control" id="bannerTitle" name="bannerTitle" maxlength="80">
            </div>
            <div class="form-group <%= (locals.validationMessages.message !== undefined) ? 'form-group-error' : '' %>">
                <label class="form-label" for="bannerMesssage">
                    Banner message
                </label>
                <% if (locals.validationMessages.message !== undefined) { %>
                    <p class="error-message" id="validation-message"><%= locals.validationMessages.message %></p>
                <% } %>
                <textarea class="form-control " name="bannerMesssage" id="bannerMesssage" rows="4" maxlength="400"></textarea>
            </div>

            <div class="form-group">
                <fieldset>
                    <legend>
                        When do you want this banner to be displayed?
                    </legend>
                    <div class="multiple-choice">
                        <input id="notActive" type="radio" name="bannerDisplay" value="notActive" checked="checked">
                        <label for="notActive">I don't know yet</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="alwayson" type="radio" name="bannerDisplay" value="isActive">
                        <label for="alwayson">Always show this banner until I stop it</label>
                    </div>
                    <div class="multiple-choice" data-target="date">
                        <input id="date-radio" type="radio" name="bannerDisplay" value="date">
                        <label for="date-radio">Only display this banner between a specific date and time</label>
                    </div>
                    <div class="panel panel-border-narrow js-hidden form-date" id="date">
                        <div class="row">
                            <div class="col-4">
                                <p>From date</p>
                                <div class="form-group form-date">
                                    <label class="form-label" for="fromDay">Day</label>
                                    <input id="fromDay" name="fromDay" type="number">
                                </div>

                                <div class="form-group form-date">
                                    <label class="form-label" for="fromMonth">Month</label>
                                    <input id="fromMonth" name="fromMonth" type="number">
                                </div>

                                <div class="form-group form-group-year">
                                    <label class="form-label" for="fromYear">Year</label>
                                    <input id="fromYear" name="fromYear" type="number">
                                </div>
                            </div>

                            <div class="col-4">
                                <p>To date</p>
                                <div class="form-group form-date">
                                    <label class="form-label" for="toDate">Day</label>
                                    <input id="toDate" name="toDate" type="number">
                                </div>

                                <div class="form-group form-date">
                                    <label class="form-label" for="toMonth">Month</label>
                                    <input id="toMonth" name="toMonth" type="number">
                                </div>

                                <div class="form-group form-group-year">
                                    <label class="form-label" for="toYear">Year</label>
                                    <input id="toYear" name="toYear" type="number">
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="form-submit submit-buttons">
                <button type="submit" class="button">Save</button>
                <a href="./" class="button button-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
