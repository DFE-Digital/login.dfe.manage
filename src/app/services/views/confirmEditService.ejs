<div class="govuk-width-container govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l text-break">
                <span class="govuk-caption-l govuk-!-margin-bottom-2"><%= locals.service.name %></span>
                Review edited service for <%= locals.user.firstName %> <%= locals.user.lastName %>
            </h1>
            <p class="govuk-body">Review these details before confirming. Approvers at this organisation will be notified that you edited a service for this user.</p>

            <dl class="govuk-summary-list">

                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Review summary
                    </dt>
                    <dd class="app-check-your-answers__answer">
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        User name
                    </dt>
                    <dd class="app-check-your-answers__answer">
                        <%=locals.user.firstName%> <%=locals.user.lastName%>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Email address
                    </dt>
                    <dd class="app-check-your-answers__answer">
                        <%= locals.user.email %> 
                    </dd>
                </div>

                <div class="app-check-your-answers__contents">
                    <dt class="govuk-summary-list__key">
                        Organisation
                    </dt>
                    <dd class="app-check-your-answers__answer">
                        <%=locals.organisation.name%>
                    </dd>
                </div>

                <div class="app-check-your-answers__contents">
                    <dt class="govuk-summary-list__key">
                        Service
                    </dt>
                    <dd class="app-check-your-answers__answer">
                        <%= locals.service.name%>
                    </dd>
                </div>
                <div class="app-check-your-answers__contents">
                    <dt class="govuk-summary-list__key">
                        Sub-service/role
                    </dt>
                    <dd class="app-check-your-answers__answer">
                        <% if (locals.roles.length > 0) { %>
                        <%=locals.roles.name%>
                        <% for (let i = 0; i < locals.roles.length; i++) { %>
                            <% const role = locals.roles[i]; %>
                            <%=role.name%> <br>
                        <% } %>
                        <% } else { %>
                            No roles selected
                        <% }%>
                    </dd>
                </div>
            </dl>

            <form method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button" data-module="govuk-button">Edit service</button>
                    <a href="<%= locals.cancelLink %>" class="govuk-button govuk-button--secondary">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>