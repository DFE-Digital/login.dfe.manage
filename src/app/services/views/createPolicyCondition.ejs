<div class="govuk-width-container govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l">
                Create policy condition for <%= locals.policy.name %>
            </h1>
            <form method="post" class="prevent-form-double-submission" id="form-new-policy-condition">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            
                <fieldset class="govuk-fieldset" id="fieldset-new-policy-condition">
                    <legend class="govuk-visually-hidden">Create policy condition for <%= locals.policy.name %></legend>
                
                    <div class="govuk-form-group <%= (locals.validationMessages.condition !== undefined) ? 'govuk-form-group--error' : '' %>">
                        <label class="govuk-label govuk-label--s" for="condition">Condition</label>
                    <% if (locals.validationMessages.condition !== undefined) { %>
                        <p id="validation-condition" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.condition%>
                        </p>
                    <% } %>
                        <select class="govuk-select <%= (locals.validationMessages.condition !== undefined) ? 'govuk-select--error' : '' %>" id="condition" name="condition">
                            <option value="" <%= (locals.condition === undefined) ? 'selected' : '' %>>Select condition</option>
                            <option value="organisation.urn" <%= (locals.condition === "organisation.urn") ? 'selected' : '' %>>organisation.urn</option>
                            <option value="organisation.ukprn" <%= (locals.condition === "organisation.ukprn") ? 'selected' : '' %>>organisation.ukprn</option>
                            <option value="organisation.id" <%= (locals.condition === "organisation.id") ? 'selected' : '' %>>organisation.id</option>
                            <option value="organisation.type.id" <%= (locals.condition === "organisation.type.id") ? 'selected' : '' %>>organisation.type.id</option>
                            <option value="organisation.status.id" <%= (locals.condition === "organisation.status.id") ? 'selected' : '' %>>organisation.status.id</option>
                            <option value="organisation.category.id" <%= (locals.condition === "organisation.category.id") ? 'selected' : '' %>>organisation.category.id</option>
                        </select>
                    </div>

                    <div class="govuk-form-group <%= (locals.validationMessages.operator !== undefined) ? 'govuk-form-group--error' : '' %>">
                        <label class="govuk-label govuk-label--s" for="bannerTitle">Operator</label>
                        <% if (locals.validationMessages.operator !== undefined) { %>
                        <p id="validation-operator" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.operator%>
                        </p>
                        <% } %>
                        <select class="govuk-select <%= (locals.validationMessages.operator !== undefined) ? 'govuk-select--error' : '' %>" id="operator" name="operator">
                            <option value="" <%= (locals.operator === undefined) ? 'selected' : '' %>>Select operator</option>
                            <option value="is" <%= (locals.operator === "is") ? 'selected' : '' %>>is</option>
                            <option value="is_not" <%= (locals.operator === "is_not") ? 'selected' : '' %>>is_not</option>
                        </select>
                    </div>

                    <div class="govuk-form-group <%= (locals.validationMessages.value !== undefined) ? 'govuk-form-group--error' : '' %>">
                        <label class="govuk-label govuk-label--s" for="value">Value</label>
                    <% if (locals.validationMessages.value !== undefined) { %>
                        <p id="validation-value" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.value%>
                        </p>
                    <% } %>
                        <input type="text" id="value" name="value" value="<%=locals.value%>" class="govuk-textarea govuk-!-width-three-quarters" rows="4" maxlength="400"<% if (locals.validationMessages.value) { %> aria-invalid="true" aria-describedby="validation-value" <% } %>>
                    </div>

                    <div class="govuk-button-group">
                        <button type="submit" class="govuk-button" data-module="govuk-button">Continue</button>
                        <a href="<%=locals.cancelLink%>" class="govuk-button govuk-button--secondary">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
